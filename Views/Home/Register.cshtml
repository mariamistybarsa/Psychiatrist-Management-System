@model Psychiatrist_Management_System.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            width: 350px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        label {
            font-weight: bold;
            color: #444;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px 15px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: border-color 0.3s;
        }

            input[type="text"]:focus,
            input[type="email"]:focus,
            input[type="password"]:focus {
                border-color: #4e54c8;
            }

        .btn {
            background-color: #4e54c8;
            color: white;
            padding: 12px;
            width: 100%;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
        }

            .btn:hover {
                background-color: #3e44a5;
            }

        .error {
            color: red;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .stylish-dropdown {
            margin-bottom: 20px;
        }

        .custom-select-role {
            padding: 10px 15px;
            font-size: 1rem;
            border: 2px solid #0d6efd;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(13, 110, 253, 0.1);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .custom-select-role:focus {
                border-color: #6610f2;
                box-shadow: 0 0 0 0.25rem rgba(102, 16, 242, 0.25);
                outline: none;
            }

            .custom-select-role option {
                padding: 10px;
            }

    </style>
</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Register" method="post">
            @if (ViewData["LoginError"] != null)
            {
                <div class="error">@ViewData["LoginError"]</div>
            }

            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" required />
            <span asp-validation-for="Email" class="error"></span>

            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" required />
            <span asp-validation-for="Password" class="error"></span>

            <label asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" type="text" required />
            <span asp-validation-for="Password" class="error"></span>
            <div class="mb-3">
                <div class="form-group stylish-dropdown">
                    <label asp-for="UsertypeId" class="form-label fw-semibold">
                        <i class="bi bi-person-vcard text-primary me-1"></i> Select Role
                    </label>
                    <select asp-for="UsertypeId" asp-items="ViewBag.UserTypes" class="form-control custom-select-role">
                        <option value="">-- Select Role --</option>
                    </select>
                    <span asp-validation-for="UsertypeId" class="text-danger small mt-1 d-block"></span>
                </div>


                <button type="submit" class="btn">Login</button>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
